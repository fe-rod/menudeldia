@using System.Configuration
@using MenuDelDia.Presentacion.Helpers
@using MenuDelDia.Presentacion.Resources
@model MenuDelDia.Presentacion.Models.RestaurantModel

@{
    ViewBag.Title = "Delete";
}

<h2>@ViewResources.DeleteTitle</h2>

<h3>@ViewResources.DeleteMessage</h3>
<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LogoPath)
        </dt>

        <dd>
            @if (string.IsNullOrEmpty(Model.LogoPath) == false)
            {<a id="lnkViewImg" target="blank" href="@WebPathHelper.CreateFullUrl(Path.Combine(ConfigurationManager.AppSettings["FolderLogos"], Model.LogoPath))">Ver</a>}
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            @if (string.IsNullOrEmpty(Model.Url) == false)
            {<a id="lnkUrl" target="blank" href="@Model.Url">@Model.Url</a>}
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@ViewResources.Delete" class="btn btn-default" /> |
            @Html.ActionLink(ViewResources.Back, "Index")
        </div>
    }
</div>

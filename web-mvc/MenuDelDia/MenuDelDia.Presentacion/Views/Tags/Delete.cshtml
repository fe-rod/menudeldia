    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ApplyToRestaurant)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplyToRestaurant, new { disabled = "disabled" })
